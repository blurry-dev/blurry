        </nav>
    </aside>

    <hgroup>
        <p class="chapter"></p>
    </hgroup>
    <aside id="table-of-contents">
        <nav class="is-sticky-above-lg ">
        <details open="">
            <summary>Content</summary>
                <ul>
                    {% for heading in body|headings %}
                    <li><a class="secondary" data-discover="true" href="#{{ heading.id }}">{{ heading.text }}</a></li>
                    {% endfor %}
                </ul>
            </details>
        </nav>
    </aside>
    <div id="content" role="document">
    {% block body %}{% endblock %}
    </div>
    </main>
    <footer>
        <div class="container">
            <p>
                <small>
                    &copy; 2020-2024 <a href="https://johnfraney.ca/">John Franey</a>
                </small>
            </p>
        </div>
    </footer>

    <link rel="preload" href="https://unpkg.com/@highlightjs/cdn-assets@11.7.0/styles/a11y-light.min.css" as="style"
        onload="this.onload=null;this.rel='stylesheet'">
    <noscript>
        <link rel="stylesheet" href="https://unpkg.com/@highlightjs/cdn-assets@11.7.0/styles/a11y-light.min.css">
    </noscript>
    <script src="https://unpkg.com/@highlightjs/cdn-assets@11.7.0/highlight.min.js" async defer></script>
    <script>window.addEventListener('load', () => hljs.highlightAll());</script>
    <style>
        {
            % include "assets/styles-below-the-fold.css" %
        }
    </style>
    <script>
        let isMenuOpen = false
        const documentationMenu = document.getElementById('documentation-menu')
        function onWindowResize(event) {
            if (window.innerWidth > 1024) {
                documentationMenu.style.transform = 'translate(0)'
                isMenuOpen = false
            }
            else {
                if (!isMenuOpen) {
                    documentationMenu.style.transform = 'translate(calc(-100% - var(--pico-spacing)))'
                }
            }
        }
        addEventListener("resize", onWindowResize)
        onWindowResize()

        const showMenuButton = document.getElementById('mobile-show-menu-button')
        if (showMenuButton && documentationMenu) {
            showMenuButton.addEventListener('click', (e) => {
                e.preventDefault()
                documentationMenu.style.transform = 'translate(0)'
                isMenuOpen = true
            })
        }

        const closeMenuButton = document.getElementById('menu-close-button')
        if (closeMenuButton) {
            closeMenuButton.addEventListener('click', (e) => {
                e.preventDefault()
                documentationMenu.style.transform = 'translate(calc(-100% - var(--pico-spacing)))'
                isMenuOpen = false
            })
        }
    </script>
</body>

</html>
